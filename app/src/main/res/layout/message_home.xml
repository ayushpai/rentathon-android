<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain">

    <ImageView
        android:id="@+id/rentathon_logo"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/rentathon_long_logo"
        />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rentathon_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Watch this Video To Continue"
        android:fontFamily="@font/raleway_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_text"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:showFullScreenButton="false"
        app:autoPlay="false"
        app:videoId="_e2NO2HAtds"
        />

    <TextView
        android:id="@+id/video_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/youtube_player"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="30dp"
        android:text="This video will ensure that you are aware of every step of the rental process"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:textSize="22dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/background_right"
        android:text="Continue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_caption"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_light"
        android:textSize="20dp"
        android:textColor="#f2af58"
        />

</androidx.constraintlayout.widget.ConstraintLayout>