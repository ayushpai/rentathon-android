<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/light_color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Rent.RentProductMain">





    <ImageView
        android:id="@+id/menu_btn"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:src="@drawable/dots2"
        android:translationZ="180dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/search_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e303030"
        android:translationZ="90dp"

        android:fontFamily="@font/roboto"


        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"

        android:translationZ="90dp"
        android:animateLayoutChanges="true"

        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/share"
        android:fontFamily="@font/roboto"
        android:hint="Share"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/report_btn"
        android:layout_width="100dp"
        android:animateLayoutChanges="true"

        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:translationZ="90dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Report Product"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/share_btn"
        app:layout_constraintTop_toTopOf="parent" />




    <Button
        android:id="@+id/delete_btn"
        android:layout_width="71dp"

        android:translationZ="90dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/roboto"
        android:hint="Remove"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/edit_btn"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:translationZ="180dp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/login_btn"
        android:hint="Edit"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/insights_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insights_btn"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:translationZ="90dp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/login_btn"
        android:hint="Insights"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="parent" />







    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:translationZ="90dp"
        android:clickable="true"

        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7  "
            tools:context=".Rent.RentProductMain">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_rent_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">



                    <ImageView
                        android:id="@+id/product_pic_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />







                    <TextView
                        android:id="@+id/product_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/raleway_bold"

                        android:layout_marginRight="128dp"

                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textColorHint="#00F3F3F3"
                        android:textSize="35dp"
                        app:layout_constraintBottom_toBottomOf="@id/product_pic_input"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:fontFamily="@font/raleway_bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"

                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textColorHint="#00F3F3F3"
                        android:textSize="35sp"
                        app:layout_constraintBottom_toBottomOf="@id/product_pic_input"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/product_name_input" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/black_background_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_rent_product" />

            <ImageView
                android:id="@+id/black_background_bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_photos" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/renter_rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_description_input">



                <TextView
                    android:id="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/raleway_bold"
                    android:background="@drawable/outline_dark"
                    android:padding="5dp"
                    android:text="Renter Information"
                    android:textColor="@color/accent_background"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_info_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15dp"
                    android:shadowColor="@color/white"
                    android:text="More Products From This User"
                    android:textColor="@color/accent_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/city_user_txt"/>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profile_pic_output"
                    android:layout_width="100dp"
                    android:layout_height="103dp"
                    android:layout_marginTop="48dp"
                    android:clickable="true"
                    android:src="@drawable/insert_photo_icon"
                    app:civ_border_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/user_title" />

                <TextView
                    android:id="@+id/renter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/raleway"
                    android:text="User Name"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic_output"
                    app:layout_constraintTop_toTopOf="@+id/profile_pic_output" />

                <ImageView
                    android:id="@+id/rating_pic"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star0"
                    app:layout_constraintStart_toStartOf="@+id/renter_name"
                    app:layout_constraintTop_toBottomOf="@+id/renter_name" />


                <TextView
                    android:id="@+id/rating_amount_txt"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:text="# Reviews"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/rating_pic"
                    app:layout_constraintStart_toStartOf="@+id/rating_pic"
                    app:layout_constraintTop_toBottomOf="@+id/rating_pic" />

                <TextView
                    android:id="@+id/city_user_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:fontFamily="@font/raleway"
                    android:text="City"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp"

                    android:layout_marginLeft="75dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating_amount_txt" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="275dp"

                android:gravity="center"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/daily_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="273dp"
                android:text="Day"

                android:gravity="center"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/raleway"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/weekly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:text="Week"
                android:gravity="center"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/raleway"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="275dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/monthly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="268dp"
                android:text="2 Weeks"

                android:gravity="center"
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <Button
                android:id="@+id/more_photos_btn"
                android:layout_width="202dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/background_right"
                android:fontFamily="@font/roboto_medium"
                android:text="View More Photos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="3dp"

                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_photos" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/verified_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/more_photos_btn">

            <ImageView
                android:id="@+id/verified_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/verified_icon"
                android:layout_marginRight="100dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/verified_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified Renter"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/accent_background"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"


                app:layout_constraintStart_toEndOf="@id/verified_logo"
                app:layout_constraintTop_toTopOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_dark"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/raleway_bold"
                android:padding="5dp"
                android:gravity="center"

                android:text="Product Information"
                android:textColor="@color/accent_background"
                android:textSize="30sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verified_layout" />


            <TextView
                android:id="@+id/product_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="52dp"
                android:layout_marginRight="20dp"
                android:background="@color/accent_background"
                android:fontFamily="@font/raleway_bold"
                android:text="Product Description"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/weekly_title" />

            <TextView
                android:id="@+id/product_description_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/outline_dark"
                android:fontFamily="@font/raleway"

                android:inputType="textMultiLine"
                android:minLines="1"
                android:nestedScrollingEnabled="true"
                android:padding="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="textStart"
                android:textColor="@color/black_p50"
                android:textColorHint="@color/accent_background"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_description_title" />

            <Button
                android:id="@+id/rent_button"
                android:layout_width="100dp"
                android:layout_height="50sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/login_btn"
                android:fontFamily="sans-serif-black"
                android:hint="Next"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/renter_rating_layout" />

            <ViewFlipper
                android:id="@+id/product_photos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"

                android:contentDescription="Product Photos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/black_background_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:layout_marginTop="4dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/home_bar"
            android:layout_width="330dp"
            android:layout_height="70dp"

            android:scaleX="1.01"
            android:scaleY="1.01"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/background_left"
             />

        <Button
            android:id="@+id/rent"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:background="@drawable/background_right"

            android:textAllCaps="false"
            android:gravity="center"

            android:textSize="17dp"
            android:fontFamily="@font/raleway_bold"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="true"
            android:gravity="center"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="0dp"

            android:textSize="17dp"


            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="true"
            android:gravity="center"
            android:fontFamily="@font/raleway"
            android:layout_marginLeft="150dp"



            android:textSize="14dp"
            android:visibility="gone"

            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="21dp"

            android:layout_marginRight="150dp"
        />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>