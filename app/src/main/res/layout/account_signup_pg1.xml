<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Signin.SignUpPage1">

    <ImageView
        android:id="@+id/cart_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleX="1.7"
        android:scaleY="1.7"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHeight_percent=".08"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        app:layout_constraintWidth_percent=".16"
        app:srcCompat="@drawable/rentathon_logo_cart" />

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"

        app:layout_constraintWidth_percent=".70" />

    <TextView
        android:id="@+id/create_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="39dp"
        app:layout_constraintBottom_toTopOf="@+id/last_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_icon"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:background="@drawable/edt_txt"
        android:clickable="true"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:fontFamily="@font/raleway"
        app:layout_constraintBottom_toBottomOf="@+id/last_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/last_name_input"
        app:layout_constraintVertical_bias="0.108"
        app:layout_constraintWidth_percent=".4" />

    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:background="@drawable/edt_txt"
        android:clickable="true"
        android:gravity="center"
        android:hint="Last Name"
        android:fontFamily="@font/raleway"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387"
        app:layout_constraintWidth_percent=".4" />

    <EditText
        android:id="@+id/signup_email_input"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".845"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:layout_marginTop="12dp"
        android:background="@drawable/edt_txt"
        android:textSize="18dp"
        android:fontFamily="@font/raleway"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_input" />

    <EditText
        android:id="@+id/signup_password_input"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".845"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:layout_marginTop="12dp"
        android:background="@drawable/edt_txt"
        android:fontFamily="@font/raleway"
        android:textSize="18dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_email_input" />

    <EditText
        android:id="@+id/confirm_password_input"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".845"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:layout_marginTop="12dp"
        android:background="@drawable/edt_txt"
        android:hint="Confirm Password"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:fontFamily="@font/raleway"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_password_input" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="130dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".075"
        android:background="@drawable/outline"
        android:fontFamily="@font/raleway_bold"
        android:hint="Next"
        android:textSize="17sp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_input"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/terms_of_service_txt"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:text="Terms Of Service"
        android:textAlignment="center"
        android:textSize="16dp"
        android:fontFamily="@font/raleway_light"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_button"
        app:layout_constraintVertical_bias="0.623" />


</androidx.constraintlayout.widget.ConstraintLayout>