<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_color_background"
    tools:context=".Rent.RentProductTime">

    <TextView
        android:id="@+id/screen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/roboto_bold"
        android:text="  Meeting Time And Date"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_color_background"
            tools:context=".Signin.MainActivity">



            <TextView
                android:id="@+id/availability_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/seekbar_txt_top_background"
                android:fontFamily="@font/roboto_medium"
                android:text="Full Name's Availability"
                android:textColor="@color/accent_background"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tableLayout"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tableLayout"
                app:layout_constraintTop_toBottomOf="@+id/profile_pic_input" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_pic_input"
                android:layout_width="188dp"
                android:layout_height="248dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:src="@drawable/insert_photo_icon"
                app:civ_border_color="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seekbar_txt_bottom_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/availability_title">

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Sunday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Monday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Tuesday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Wednsday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Thursday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Friday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Saturday"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="160dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Not Available"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/choose_date_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Choose A Date:"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/accent_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout"/>


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="326dp"
                android:layout_height="311dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/calendar_background"
                android:minDate="1/1/2020"
                android:maxDate="12/31/2020"
                android:contextClickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/choose_date_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/time_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/duration_constraint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/choose_time_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Choose A Time:"
                    android:layout_marginTop="30dp"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@color/accent_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/meet_title"
                    android:layout_width="108dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/condition_title_background"
                    android:text="Pick Up Time:"
                    android:gravity="center"
                    android:textColor="@color/accent_background"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="11dp"
                    app:layout_constraintEnd_toStartOf="@id/meet_spinner"
                    app:layout_constraintTop_toBottomOf="@id/choose_time_title" />

                <Spinner
                    android:id="@+id/meet_spinner"
                    android:layout_width="206dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/condition_spinner_background"
                    android:entries="@array/Available_Times_2"
                    android:popupBackground="@color/light_grey"
                    android:gravity="center"

                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@id/meet_title"
                    app:layout_constraintStart_toEndOf="@id/meet_title"
                    app:layout_constraintTop_toTopOf="@id/meet_title"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/return_title"
                    android:layout_width="108dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:background="@drawable/condition_title_background"
                    android:textSize="13sp"
                    android:textColor="@color/accent_background"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Return Time:"
                    android:padding="11dp"
                    app:layout_constraintEnd_toStartOf="@id/return_spinner"
                    app:layout_constraintTop_toBottomOf="@id/meet_title" />

                <Spinner
                    android:id="@+id/return_spinner"
                    android:layout_width="206dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:background="@drawable/condition_spinner_background"
                    android:entries="@array/Available_Times_2"
                    android:popupBackground="@color/light_grey"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/return_title"
                    app:layout_constraintStart_toEndOf="@id/return_title"
                    app:layout_constraintTop_toTopOf="@+id/return_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selected_date_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/calendarView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/meet_date_title"
                    android:layout_width="108dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/condition_title_background"
                    android:text="Pick Up Date:"
                    android:gravity="center"
                    android:textColor="@color/accent_background"
                    android:textSize="13sp"
                    android:layout_marginLeft="18dp"

                    android:fontFamily="@font/roboto_medium"
                    android:padding="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/meet_date"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/meet_date"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/condition_spinner_background"
                    android:gravity="center"
                    android:text="4/17/20"
                    android:fontFamily="@font/roboto"


                    app:layout_constraintBottom_toBottomOf="@id/meet_date_title"
                    app:layout_constraintStart_toEndOf="@id/meet_date_title"
                    app:layout_constraintTop_toTopOf="@id/meet_date_title"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/return_date_title"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center"
                    android:background="@drawable/condition_title_background"
                    android:textSize="13sp"
                    android:textColor="@color/accent_background"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Return Date:"
                    android:padding="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/return_date"
                    app:layout_constraintTop_toBottomOf="@id/meet_date_title" />

                <TextView
                    android:id="@+id/return_date"
                    android:layout_width="108dp"
                    android:layout_height="43dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:background="@drawable/condition_spinner_background"
                    android:text="4/21/20"
                    app:layout_constraintBottom_toBottomOf="@+id/return_date_title"
                    app:layout_constraintStart_toEndOf="@id/return_date_title"
                    app:layout_constraintTop_toTopOf="@+id/return_date_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/duration_constraint"

                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selected_date_constraint"
                android:layout_marginTop="12dp"
                android:layout_width="310dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/duration_seekbar_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seekbar_txt_top_background"
                    android:hint="Renting Duration"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/duration_seekbar"
                    app:layout_constraintEnd_toEndOf="@+id/duration_seekbar"
                    app:layout_constraintStart_toStartOf="@+id/duration_seekbar"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/duration_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="29dp"
                    android:background="@drawable/seekbar_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_seekbar_txt" />

                <TextView
                    android:id="@+id/duration_seekbar_txt_output"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seekbar_txt_bottom_background"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="0 Days"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_seekbar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/rent_button"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_marginBottom="140dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rent_btn"
                android:fontFamily="@font/roboto_medium"
                android:text="Rent"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintTop_toBottomOf="@id/time_constraint"
                app:layout_constraintBottom_toBottomOf="@id/constraint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>