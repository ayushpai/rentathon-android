<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Signin.MainActivity">

    <EditText
        android:id="@+id/signin_email_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edt_txt"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/roboto"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rentathon_logo" />

    <EditText
        android:id="@+id/signin_password_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edt_txt"
        android:hint="Enter Password"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_email_input" />

    <TextView
        android:id="@+id/signup_button"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="70dp"
        android:clickable="true"
        android:hint="Don't Have an Account? Click Here to Sign Up!"
        android:textSize="17sp"
        android:padding="3dp"
        android:fontFamily="@font/roboto"

        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:clickable="true"
        android:text="Reset Password"
        android:padding="5dp"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/roboto_medium"
        android:hint="Login"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/signup_button"
        app:layout_constraintEnd_toStartOf="@id/google_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_password_input" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:theme="@style/LightProgressBarStyle"
        app:layout_constraintBottom_toTopOf="@id/signup_button"

        android:layout_marginLeft="70dp"
        android:layout_marginBottom="58dp"

        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/google_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_password_input"/>




    <ImageView
        android:id="@+id/rentathon_logo"
        android:layout_width="207dp"
        android:layout_height="141dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/signin_email_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rentathon_the_renting_app_logo" />

    <ProgressBar
        android:id="@+id/progressBarGoogle"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/google_btn"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/signin_password_input"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/btn_google_dark_normal_xxxhdpi"

        />


</androidx.constraintlayout.widget.ConstraintLayout>