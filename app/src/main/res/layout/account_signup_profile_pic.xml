<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".S">

    //NEED TO ADD PROFILE PIC IMAGEVIEW
    //MAKE THE "RENTATHON recommends you have a profile picture if the click 'skip'
    if they upload a picture 'skip' should become 'continue'

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_p50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Profile Picture"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/skip_btn"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/quantum_grey700"
        android:text="Skip"
        android:textSize="17sp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <ProgressBar
        android:id="@+id/skip_progress_bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:theme="@style/LightProgressBarStyle"
        app:layout_constraintBottom_toBottomOf="@+id/skip_button"
        app:layout_constraintEnd_toEndOf="@+id/skip_button"
        app:layout_constraintStart_toStartOf="@id/skip_button"
        app:layout_constraintTop_toTopOf="@+id/skip_button" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/login_btn"
        android:fontFamily="sans-serif-black"
        android:hint="Upload"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

    <ProgressBar
        android:id="@+id/upload_progress_bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:theme="@style/LightProgressBarStyle"
        app:layout_constraintBottom_toBottomOf="@+id/upload_button"
        app:layout_constraintEnd_toEndOf="@+id/upload_button"
        app:layout_constraintStart_toStartOf="@+id/upload_button"
        app:layout_constraintTop_toTopOf="@+id/upload_button" />
</androidx.constraintlayout.widget.ConstraintLayout>