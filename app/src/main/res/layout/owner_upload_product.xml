<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/light_color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:translationZ="90dp"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:isScrollContainer="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_color_background"
            tools:context=".Signin.MainActivity">



            <ImageView
                android:id="@+id/camera_menu"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="#9e303030"
                android:layout_marginTop="200dp"
                android:translationZ="90dp"
                android:visibility="gone"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/white_x"
                android:layout_width="42dp"
                android:layout_height="29dp"
                android:layout_marginTop="210dp"
                android:layout_marginRight="190dp"
                android:padding="1dp"
                android:src="@drawable/whitex2"
                android:visibility="gone"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/choose_photo"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:visibility="gone"
                android:textColor="@color/white"
                android:text="Choose a Photo"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="300dp"
                android:translationZ="90dp"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/take_picture"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:textColor="@color/white"
                android:text="Take a Picture"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_marginTop="245dp"
                android:translationZ="90dp"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/photo_background_color"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/black_background_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_background_color" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/product_pic_input"
                android:layout_width="322dp"
                android:layout_height="226dp"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:src="@drawable/insert_photo_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edt_txt"
                android:fontFamily="@font/roboto"
                android:hint="Product Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="45"
                android:padding="16dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/product_pic_input"
                app:layout_constraintStart_toStartOf="@+id/product_pic_input"
                app:layout_constraintTop_toBottomOf="@+id/product_pic_input" />

            <EditText
                android:id="@+id/product_relative_price_input"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:fontFamily="@font/roboto"
                android:hint="Product Value ($)"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:padding="16dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/product_rent_price_input"
                app:layout_constraintEnd_toStartOf="@+id/product_value_and_fee_info_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/product_rent_price_input"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/condition_title"
                android:layout_width="90dp"
                android:layout_height="40dp"

                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_bold"
                android:hint="Condition:"
                android:padding="11dp"
                app:layout_constraintBottom_toBottomOf="@id/condition_spinner"
                app:layout_constraintEnd_toStartOf="@id/condition_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/condition_spinner" />

            <Spinner
                android:id="@+id/condition_spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="60dp"
                app:layout_constraintBottom_toTopOf="@+id/product_description_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/condition_title"
                app:layout_constraintTop_toBottomOf="@+id/product_relative_price_input"
                android:spinnerMode="dropdown"

                android:popupBackground="@color/light_grey"
                android:entries="@array/Conditions" />


            <TextView
                android:id="@+id/product_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"

                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:background="@color/accent_background"
                android:text="Product Description"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_relative_price_input" />

            <EditText
                android:id="@+id/product_description_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/description_bottom_background"
                android:inputType="textMultiLine"
                android:padding="16dp"

                android:textSize="15sp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:nestedScrollingEnabled="true"
                android:minLines="2"



                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_description_title"
                />

            <EditText
                android:id="@+id/product_rent_price_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"

                android:fontFamily="@font/roboto"
                android:hint="Rental Fee ($/day)"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:padding="16dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/black_background_bar" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_right"
                android:clickable="true"
                android:fontFamily="@font/roboto_medium"
                android:text="Upload More Photos"
                android:gravity="center"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@id/product_description_input" />







            <ImageView
                android:id="@+id/product_name_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_name_input"
                app:layout_constraintTop_toTopOf="@+id/product_name_input"
                app:layout_constraintLeft_toRightOf="@id/product_name_input"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/condition_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@id/condition_spinner"
                app:layout_constraintTop_toTopOf="@id/condition_spinner"
                app:layout_constraintLeft_toRightOf="@id/condition_spinner"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/product_value_and_fee_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_rent_price_input"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/product_relative_price_input"
                app:layout_constraintRight_toLeftOf="@id/product_rent_price_input"
                app:layout_constraintTop_toTopOf="@+id/product_rent_price_input"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/product_description_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="25dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_description_title"
                app:layout_constraintEnd_toEndOf="@id/product_description_title"
                app:layout_constraintTop_toTopOf="@+id/product_description_title"
                app:layout_constraintVertical_bias="0.527"
                app:srcCompat="@drawable/info_icon" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:layout_marginTop="4dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/home_bar"
            android:layout_width="330dp"
            android:layout_height="70dp"


            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/background_left"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:background="@drawable/background_right"

            android:shadowColor="#000000"

            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="17dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:text="Upload"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/layer"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:background="@drawable/fade_button"




            android:textSize="17dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/preview_button"
            android:layout_width="129dp"
            android:layout_height="43dp"

            android:clickable="true"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="17dp"
            android:textSize="17dp"
            android:text="Preview Listing"
            android:textColor="@color/accent_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="21dp"

            android:layout_marginRight="150dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>