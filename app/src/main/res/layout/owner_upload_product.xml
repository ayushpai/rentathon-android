<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/light_color_background"
    tools:context=".Product.ProductMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:translationZ="90dp"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:isScrollContainer="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_color_background"
            tools:context=".Signin.MainActivity">



            <ImageView
                android:id="@+id/camera_menu"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="#9e303030"
                android:layout_marginTop="200dp"
                android:translationZ="90dp"
                android:visibility="gone"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/white_x"
                android:layout_width="42dp"
                android:layout_height="29dp"
                android:layout_marginTop="210dp"
                android:layout_marginRight="190dp"
                android:padding="1dp"
                android:src="@drawable/whitex2"
                android:visibility="gone"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/choose_photo"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:visibility="gone"
                android:textColor="@color/white"
                android:text="Choose a Photo"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="300dp"
                android:translationZ="90dp"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/take_picture"
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:textColor="@color/white"
                android:text="Take a Picture"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_marginTop="245dp"
                android:translationZ="90dp"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/photo_background_color"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/black_background_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_background_color" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/product_pic_input"
                android:layout_width="322dp"
                android:layout_height="226dp"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:src="@drawable/insert_photo_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edt_txt"
                android:fontFamily="@font/roboto"
                android:hint="Product Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="45"
                android:padding="16dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/product_pic_input"
                app:layout_constraintStart_toStartOf="@+id/product_pic_input"
                app:layout_constraintTop_toBottomOf="@+id/product_pic_input" />

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_black"
                android:gravity="center"


                android:padding="5dp"
                android:text="Pricing"
                android:textColor="@color/accent_background"

                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/black_background_bar" />

            <TextView
                android:id="@+id/daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@+id/productTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/daily_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/raleway_bold"

                android:gravity="center"
                android:text="Day"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/productTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"


                android:fontFamily="@font/raleway"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@+id/productTitle"

                app:layout_constraintStart_toStartOf="@+id/productTitle"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/weekly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:text="Week"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/productTitle"
                app:layout_constraintStart_toStartOf="@+id/productTitle"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black_p50"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/productTitle"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <TextView
                android:id="@+id/monthly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/raleway_bold"

                android:gravity="center"
                android:text="2 Weeks"
                android:textColor="@color/accent_background"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toEndOf="@+id/productTitle"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <EditText
                android:id="@+id/product_relative_price_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"

                android:fontFamily="@font/roboto"
                android:hint="Product Value ($)"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/product_rent_price_input"
                app:layout_constraintEnd_toStartOf="@+id/product_value_and_fee_info_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/product_rent_price_input"
                app:layout_constraintVertical_bias="0.0" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/price_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_rent_price_input">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regressive Pricing (Recommended)"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/regressive_info_button"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/info_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/condition_title"
                android:layout_width="90dp"
                android:layout_height="40dp"

                android:layout_marginLeft="60dp"
                android:fontFamily="@font/roboto_bold"
                android:hint="Condition:"
                android:padding="11dp"
                app:layout_constraintBottom_toBottomOf="@id/condition_spinner"
                app:layout_constraintEnd_toStartOf="@id/condition_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/condition_spinner" />


            <Spinner
                android:id="@+id/condition_spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="80dp"
                android:entries="@array/Conditions"
                android:popupBackground="@color/light_grey"
                android:spinnerMode="dropdown"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/condition_title"
                app:layout_constraintTop_toBottomOf="@+id/price_box" />

            <TextView
                android:id="@+id/product_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@color/accent_background"
                android:fontFamily="@font/raleway_bold"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:text="Product Description"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/condition_spinner" />


            <EditText
                android:id="@+id/product_description_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/outline_dark"
                android:fontFamily="@font/raleway"

                android:inputType="textMultiLine"
                android:nestedScrollingEnabled="true"
                android:padding="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textAlignment="textStart"
                android:textColor="@color/black_p50"
                android:textColorHint="@color/accent_background"
                android:textSize="17dp"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_description_title" />

            <EditText
                android:id="@+id/product_rent_price_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"

                android:layout_marginRight="20dp"
                android:fontFamily="@font/roboto"
                android:hint="Rental Fee ($/day)"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toEndOf="@+id/product_value_and_fee_info_button"
                app:layout_constraintTop_toBottomOf="@+id/weekly_title" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/background_right_orange"
                android:clickable="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Upload More Photos"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_description_input"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/product_name_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_name_input"
                app:layout_constraintTop_toTopOf="@+id/product_name_input"
                app:layout_constraintLeft_toRightOf="@id/product_name_input"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/condition_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@id/condition_spinner"
                app:layout_constraintTop_toTopOf="@id/condition_spinner"
                app:layout_constraintLeft_toRightOf="@id/condition_spinner"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/product_value_and_fee_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_rent_price_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/product_rent_price_input"
                app:srcCompat="@drawable/info_icon" />

            <ImageView
                android:id="@+id/product_description_info_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="25dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/product_description_title"
                app:layout_constraintEnd_toEndOf="@id/product_description_title"
                app:layout_constraintTop_toTopOf="@+id/product_description_title"
                app:layout_constraintVertical_bias="0.527"
                app:srcCompat="@drawable/info_icon" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/home_bar"
            android:layout_width="330dp"
            android:layout_height="70dp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/background_left"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:layout_marginRight="150dp"

            android:background="@drawable/background_right_orange"

            android:clickable="true"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:shadowColor="#000000"
            android:text="Upload"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/home_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home_bar" />

        <Button
            android:id="@+id/layer"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:layout_marginRight="150dp"


            android:background="@drawable/fade_button"
            android:clickable="true"
            android:fontFamily="@font/roboto_bold"
            android:textSize="17dp"


            app:layout_constraintBottom_toBottomOf="@+id/home_bar"
            app:layout_constraintEnd_toEndOf="@+id/home_bar"
            app:layout_constraintStart_toStartOf="@+id/home_bar"
            app:layout_constraintTop_toTopOf="@+id/home_bar" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/save"
            app:layout_constraintEnd_toEndOf="@+id/save"

            app:layout_constraintStart_toStartOf="@+id/save"
            app:layout_constraintTop_toTopOf="@+id/save" />

        <TextView
            android:id="@+id/preview_button"
            android:layout_width="129dp"
            android:layout_height="43dp"

            android:clickable="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Preview Listing"
            android:textColor="@color/accent_background"
            android:textSize="17dp"
            app:layout_constraintHorizontal_bias=".85"
            app:layout_constraintBottom_toBottomOf="@+id/home_bar"
            app:layout_constraintEnd_toEndOf="@+id/home_bar"
            app:layout_constraintStart_toStartOf="@+id/home_bar"
            app:layout_constraintTop_toTopOf="@+id/home_bar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>