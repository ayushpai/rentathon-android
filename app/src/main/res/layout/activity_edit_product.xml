<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/light_color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Rent.EditProduct">


    <TextView
        android:id="@+id/search_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e303030"
        android:translationZ="90dp"

        android:fontFamily="@font/roboto"


        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:translationZ="90dp"
        android:clickable="true"

        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:isScrollContainer="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_color_background"
            tools:context=".Signin.MainActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_rent_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/product_pic_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <EditText
                    android:id="@+id/product_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Product Name"
                    android:layout_marginRight="128dp"

                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textColorHint="#00F3F3F3"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_pic_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="275dp"
                    android:fontFamily="@font/roboto_bold"

                    android:layout_marginRight="0dp"

                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textColorHint="#00F3F3F3"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_pic_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/black_background_bar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_rent_product" />

            <ImageView
                android:id="@+id/black_background_bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_photos" />


            <Button
                android:id="@+id/more_photos_btn"
                android:layout_width="203dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_right"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dp"
                android:clickable="true"

                android:text="Change Product Photo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_photos" />



            <TextView
                android:id="@+id/condition_title"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/condition_title_background"
                android:fontFamily="@font/roboto_medium"

                android:hint="Condition:"
                android:padding="11dp"

                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/condition_txt_view"
                app:layout_constraintEnd_toStartOf="@id/condition_txt_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/condition_txt_view" />

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28sp"
                android:fontFamily="@font/roboto_bold"

                android:text="Edit Product Details:"
                android:textColor="@color/accent_background"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/more_photos_btn" />



            <EditText
                android:id="@+id/RentalFee"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:background="@drawable/edt_txt"
                android:layout_marginTop="20dp"
                android:inputType="textPersonName"

                android:maxLength="8"
                android:padding="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                app:layout_constraintTop_toBottomOf="@id/productTitle"
                android:imeOptions="actionNext"/>

            <TextView
                android:id="@+id/price_title"
                android:layout_width="90dp"
                android:layout_height="51dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/condition_title_background"
                android:fontFamily="@font/roboto_medium"

                android:hint="Price:"
                android:gravity="center"
                android:padding="11dp"

                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/RentalFee"
                app:layout_constraintEnd_toStartOf="@id/RentalFee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/RentalFee" />


            <TextView
                android:id="@+id/condition_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/condition_spinner_background"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="None"
                android:padding="11dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/condition_title"
                app:layout_constraintTop_toBottomOf="@id/RentalFee" />

            <Spinner
                android:id="@+id/condition_spinner"
                android:layout_width="189dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/condition_spinner_background"
                android:entries="@array/Conditions"
                android:popupBackground="@color/light_grey"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/condition_title"
                app:layout_constraintTop_toBottomOf="@id/RentalFee" />

            <TextView
                android:id="@+id/product_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="52dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/seekbar_txt_top_background"
                android:fontFamily="@font/roboto_medium"
                android:hint="Product Description"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/condition_txt_view" />

            <EditText
                android:id="@+id/product_description_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/description_bottom_background"
                android:fontFamily="@font/roboto"

                android:inputType="textMultiLine"
                android:minLines="1"
                android:nestedScrollingEnabled="true"
                android:padding="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"

                android:textColor="@android:color/black"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_description_title" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="100dp"
                android:layout_height="50sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/login_btn"
                android:fontFamily="sans-serif-black"
                android:hint="Save"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_description_input" />

            <ViewFlipper
                android:id="@+id/product_photos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:contentDescription="Product Photos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/black_background_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/home_bar"
            android:layout_width="330dp"
            android:layout_height="70dp"


            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/background_left"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:background="@drawable/background_right"

            android:shadowColor="#000000"

            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="17dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:text="Save"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/layer"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:background="@drawable/fade_button"




            android:textSize="17dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="14dp"
            android:clickable="true"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="129dp"
            android:layout_height="43dp"


            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="17dp"
            android:textSize="17dp"
            android:text="Delete Product"
            android:clickable="true"
            android:textColor="@color/accent_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="21dp"

            android:layout_marginRight="150dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>